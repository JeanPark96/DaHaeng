<style type= "text/css">
  body{text-align: center;}

.signin {
  margin-right: 500px;
  margin-left: 500px;
  padding: 20px;
  background-color: white;
  opacity: 0.8;
}
body {
  background-color: DodgerBlue;
  background-size: cover;
}

</style>
<div class="signin">
  <h2>회원가입</h2>

<body>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%=f.label :name,"이름"%><br/>
    <%= f.text_field :name, autofocus: true, autocomplete: "name",:placeholder => 'ex)홍길동'%><br><br>
  </div>
  <div class="field">
    <%=f.label :useridentifier,"아이디"%><br/>
    <%= f.text_field :useridentifier,:placeholder => '영어, 숫자 최소 4자'%><br><br>
  </div>

  <div class="field">
    <%= f.label :password,'비밀번호' %></br>
    <%= f.password_field :password, :placeholder => '최소 6자' %><br><br>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,'비밀번호 확인' %><br />
    <%= f.password_field :password_confirmation, :placeholder => '최소 6자' %><br><br>
  </div>
  
  <div class="field">
    <%= f.label :email,'이메일' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:placeholder => 'ex)abcd@naver.com' %><br><br>
  </div>
  <div class="field">
    <%= f.label :gender,'성별' %><br />
    <%=f.radio_button :gender, 'female'%>
    <%=f.label :gender_female, "여자"%>
    <%=f.radio_button :gender, 'male'%>
    <%=f.label :gender_male, "남자"%><br><br>
  </div>
  <div class="field">
    <%= f.label :birthday,'생일' %><br/>
    <%= f.text_field :birthday, :placeholder => 'ex)19961008'%><br><br>
  </div>
  <div class="actions">
    <span id="submitbutton"><%= f.submit "Sign up" %></span>
    <button><a href="/" id="cancelbutton">Cancel</a></button>
    </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

<%= stylesheet_link_tag "main" %>

</body>